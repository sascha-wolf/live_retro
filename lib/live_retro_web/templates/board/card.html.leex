<item>
  <div class="card <%= color_for(@type) %> darken-1">
    <a class="delete" href="#" phx-click="delete" phx-value="<%= @id %>">
      <i class="far fa-trash-alt"></i>
    </a>

    <a href="#" phx-click="edit" phx-value="<%= @id %>">
      <div class="card-content white-text">
        <%= @text %>
      </div>
    </a>
  </div>
</item>
